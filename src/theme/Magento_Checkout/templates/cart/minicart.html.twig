<div data-block="minicart" data-bind="scope: 'minicart_content'">
    <a href="{{ getUrl('checkout/cart') }}" class="text-decoration-none" data-bind="click: openMinicart">
        {{ bs_icon('bag', '30px') }}
        <span class="sr-only">{{ 'My Cart'|trans }}</span>
        <!-- ko if: getCartParam('summary_count') && getCartParam('summary_count') > 0 -->
        <span class="badge bg-primary" data-bind="visible: getCartParam('summary_count') && getCartParam('summary_count')" style="display: none">
            <!-- ko text: getCartParam('summary_count') --><!-- /ko -->
            <span class="sr-only" data-bind="i18n: 'items'"></span>
        </span>
        <!-- /ko -->
    </a>
    <div style="display: none">
        <div data-bind="afterRender: initModal" class="h-100">
            <!-- ko if: isModalCreated -->
                <!-- ko template: getTemplate() --><!-- /ko -->
            <!-- /ko -->
        </div>
    </div>
</div>
<script>
    window.checkout = {{ block.getSerializedConfig()|raw }};
</script>
<script type="text/x-magento-init">
    {
        "[data-block='minicart']": {
            "Magento_Ui/js/core/app": {{ block.getJsLayout()|raw }}
        }
    }
</script>