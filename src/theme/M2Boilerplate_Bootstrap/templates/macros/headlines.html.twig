{% macro headline(text = '', level = 1, displayLevel = null, additionalCssClasses = null) %}
 <h{{ level }} class="{% if displayLevel %}h{{ displayLevel }} {% endif %} {{ additionalCssClasses }}">
     {{ text }}
 </h{{ level }}>
{% endmacro %}

